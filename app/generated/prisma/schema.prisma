generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id           String         @id @default(cuid())
  titleEn      String // 英文标题
  titleJa      String // 日文标题
  year         Int // 发行年份
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  availability Availability[]
}

model Platform {
  id           String         @id @default(cuid())
  name         String // 平台名称
  website      String? // 平台网站
  type         PlatformType // 平台类型
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  availability Availability[]
}

model Region {
  id           String         @id @default(cuid())
  code         String         @unique // 地区代码 (如 US, JP, CN)
  name         String // 地区名称
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  availability Availability[]
}

model Availability {
  id             String   @id @default(cuid())
  movie          Movie    @relation(fields: [movieId], references: [id])
  movieId        String
  platform       Platform @relation(fields: [platformId], references: [id])
  platformId     String
  region         Region   @relation(fields: [regionId], references: [id])
  regionId       String
  url            String? // 观看链接
  priceInfo      Json? // 价格信息 (JSON格式，可存储不同类型的价格)
  notes          String? // 额外说明
  isSubscription Boolean  @default(false)
  isFree         Boolean  @default(false)
  lastChecked    DateTime // 最后检查时间
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([movieId, platformId, regionId])
}

enum PlatformType {
  STREAMING
  RENTAL
  PURCHASE
  FREE
  CINEMA
  PHYSICAL
}
